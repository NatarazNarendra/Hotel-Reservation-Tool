<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <locale-config>
            <default-locale>en_US</default-locale>
            <supported-locale>en_US</supported-locale>
        </locale-config>

        <message-bundle>
            org.koenighotze.jee7hotel.jsfcustommessages
        </message-bundle>

        <resource-bundle>
            <base-name>org.koenighotze.jee7hotel.messages</base-name>
            <var>msgs</var>
        </resource-bundle>
    </application>


    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>/index.xhtml</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>*</from-view-id>

        <navigation-case>
            <from-outcome>/booking/add_new_reservation.xhtml</from-outcome>
            <to-view-id>/booking/add_new_reservation.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>/add_new_guest.xhtml</from-outcome>
            <to-view-id>/add_new_guest.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>guestbook.xhtml</from-outcome>
            <to-view-id>/guestbook.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>/booking/bookings.xhtml</from-outcome>
            <to-view-id>/booking/bookings.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>/room/rooms.xhtml</from-outcome>
            <to-view-id>/room/rooms.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>addnewreservationflow</from-outcome>
            <to-view-id>/addnewreservationflow/addnewreservationflow.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>
