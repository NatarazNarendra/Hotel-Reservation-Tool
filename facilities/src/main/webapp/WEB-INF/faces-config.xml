<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <!-- only english is supported -->
        <locale-config>
            <default-locale>en_US</default-locale>
            <supported-locale>en_US</supported-locale>
        </locale-config>

        <!-- declare a custom message bundle in the package... -->
        <message-bundle>
            org.koenighotze.jee7hotel.facilities.jsfcustommessages
        </message-bundle>

        <!-- Messages are exposed as msgs within the app -->
        <resource-bundle>
            <base-name>org.koenighotze.jee7hotel.facilities.messages</base-name>
            <var>msgs</var>
        </resource-bundle>
    </application>


    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>/index.xhtml</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>*</from-view-id>

        <navigation-case>
            <from-outcome>/rooms.xhtml</from-outcome>
            <to-view-id>/rooms.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>
